<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/baltic_sea"
    android:orientation="vertical"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/quiz_result_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/peri_winkle"
        android:minHeight="@dimen/home_screen_toolbar_min_height"
        android:paddingTop="10dp"
        />
    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/comfortaa_variable_font_wght"
        android:text="@string/quiz_results_heading"
        android:textStyle="bold"
        android:textColor="@color/peri_winkle"
        android:textSize="30sp"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/score_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        android:fontFamily="@font/comfortaa_variable_font_wght"
        android:text="Score: 5/5"
        android:textColor="@color/exodus_fruit"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/comfortaa_variable_font_wght"
        android:text="Thanks for playing ! "
        android:textStyle="bold"
        android:textColor="@color/peri_winkle"
        android:textSize="25sp"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/comfortaa_variable_font_wght"
        android:text="Have a good day ☺️"
        android:textColor="@color/peri_winkle"
        android:textSize="25sp"
        android:textStyle="bold" />

</LinearLayout>